# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_API_ID=your_telegram_api_id_here
TELEGRAM_API_HASH=your_telegram_api_hash_here

# Transcription Service
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# AI Models (at least one required - Anthropic recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Optional Settings
MAX_FILE_SIZE_MB=2048
DEEPGRAM_TIMEOUT_SECONDS=3600
DEEPGRAM_MODEL=nova-2
TEMP_DIR=./temp
LOG_LEVEL=INFO

# AI Model Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
GEMINI_MODEL=gemini-2.5-flash

# RAG (Retrieval Augmented Generation) for meeting search
RAG_ENABLE_DEFAULT=false
RAG_DB_PATH=./temp/rag_indexing.sqlite3
RAG_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RAG_CHUNK_SIZE=400
RAG_CHUNK_OVERLAP=80
RAG_RETRIEVAL_K=12
RAG_SIMILARITY_THRESHOLD=0.7

# Analytics (optional)
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Zoom Integration (optional)
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_REDIRECT=
ZOOM_WEBHOOK_SECRET=
STATE_SECRET=
BACKEND_BASE_URL=
ZOOM_DB_PATH=./temp/zoom_integration.sqlite3
